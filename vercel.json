{
    "version": 2,
    "builds": [
      {
        "src": "mealplanner/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "planner/static/(.*)",
        "dest": "planner/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "mealplanner/wsgi.py"
      }
    ]
  }